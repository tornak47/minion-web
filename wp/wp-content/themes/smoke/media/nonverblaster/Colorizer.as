package nonverblaster {	import flash.display.*;	import flash.geom.ColorTransform;		import flash.events.*;		import com.gskinner.motion.GTween;		public class Colorizer extends MovieClip{		public function Colorizer(){					}		public static function colorize($target, $color){			var gtween = new GTween($target.transform.colorTransform, .1);			gtween.setAssignment($target.transform, "colorTransform");			gtween.setProperty("color", $color);		}	}}