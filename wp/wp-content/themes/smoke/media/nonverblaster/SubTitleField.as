package nonverblaster {	import flash.display.*;	import flash.text.*;	public class SubTitleField extends Sprite {				private var textFormat			:TextFormat;		public var textFeld				:TextField;		private var style				:StyleSheet;				public function SubTitleField(){			adjustCSS();			adjustTextFormat();			createTextField();		}		public function setText($t){			textFeld.htmlText = $t;		}		private function adjustCSS(){			var a:Object = new Object;			var italic:Object = new Object;			var bold:Object = new Object;						a.textDecoration = "underline";						italic.fontStyle = "italic";			italic.display = "inline";						bold.fontWeight = "bold";			bold.display = "inline";						style = new StyleSheet();			style.setStyle("a",a);			style.setStyle("em",italic);			style.setStyle("i",italic);			style.setStyle("strong",bold);			style.setStyle("b",bold);		}		private function adjustTextFormat(){			textFormat = new TextFormat()			textFormat.font = new SubtitleFont().fontName;			textFormat.size = Glo.bal.subtitleSize;			textFormat.leading = 2;			textFormat.letterSpacing = .1;			textFormat.color = Glo.bal.subtitlesColor;			textFormat.align = "center"		}		private function createTextField(){			textFeld = new TextField();			textFeld.mouseWheelEnabled = false;			textFeld.thickness = 0;			textFeld.gridFitType = "pixel";			textFeld.embedFonts = true;			textFeld.multiline = true;			textFeld.wordWrap = true;			textFeld.selectable = false;			textFeld.mouseEnabled = false;			textFeld.condenseWhite = true;			textFeld.width = 600;			textFeld.autoSize = "center";			textFeld.defaultTextFormat = this.textFormat;			textFeld.styleSheet = style;			this.addChild(textFeld);			textFeld.antiAliasType = "advanced";		}	}}