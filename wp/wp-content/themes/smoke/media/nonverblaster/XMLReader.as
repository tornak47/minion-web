package nonverblaster {	import flash.display.*;	import flash.events.*;	import flash.net.*;	import flash.external.ExternalInterface;	import flash.system.Security;		public class XMLReader extends MovieClip {				private var uldr					:URLLoader = new URLLoader();;		private var callBackFunction		:Function;		private var xmlData					:XML;		private var url						:String;						public function XMLReader(callBackFunction, $url){						Security.allowDomain ("*");			Security.loadPolicyFile ("http://vimeo.com/​api/​crossdomain.xml");						this.callBackFunction = callBackFunction;			url = $url;			uldr.addEventListener(Event.COMPLETE, xmlCompleteHandler, false, 0, true);			uldr.addEventListener( IOErrorEvent.IO_ERROR, noXML );			uldr.load(new URLRequest(url));		}				public static function loadXML(callBackFunction, url){			var xmlReader = new XMLReader(callBackFunction, url);		}		private function noXML( e:IOErrorEvent ):void {			trace("XML was not found! \n" + url);			ExternalInterface.call("alert", "The requested XML was not found: \n" + url);		}				//		// nachdem das XML geladen ist, eine Liste aus den <video> nodes erstellen		private function xmlCompleteHandler(event:Event):void {			uldr.removeEventListener(Event.COMPLETE, xmlCompleteHandler);						xmlData = XML(event.target.data);			//xmlData.ignoreWhite = true;									callBackFunction(xmlData);		}	}}