package nonverblaster {	import flash.display.*;		public class DomainExtractor extends Sprite{		public function DomainExtractor(){			//var url = "http://www.nonverbla.de/schala/toll";			//trace(extractDomain(url));		}				public function extractDomain(url):String {			var afterHTTP:String = url.split("//")[1].toLowerCase(); // www.nonverbla.de/schala/toll			var fullDomain:String = afterHTTP.split("/")[0]; // www.nonverbla.de				var domainParts:Array = fullDomain.split("."); //www,nonverbla,de				if(domainParts[0] == "www"){				domainParts.splice(0, 1); // nonverbla,de			}			var domain = domainParts.join("."); // nonverbla.de				return(domain);		}	}}